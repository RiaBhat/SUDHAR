<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sudhar.Login"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="LOGIN!"
        />
    <TextView
        android:id="@+id/enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="Enter your Aadhar Number here!"
        android:background="@color/black"
        />

    <EditText
        android:id="@+id/aad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_above="@id/info2"
        android:text="Mera Aadhar,"
        />
    <TextView
        android:id="@+id/info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:text="Meri Pehchaan!"
        />

    <Button
        android:id="@+id/otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_below="@id/aad"
        android:textColor="@color/white"
        android:text="Send an OTP to your registered mobile number"
        />

</RelativeLayout>
